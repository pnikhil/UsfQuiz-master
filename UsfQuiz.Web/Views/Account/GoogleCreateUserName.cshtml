@model UsfQuiz.Web.ViewModels.Account.GoogleLoginConfirmationViewModel
@{
    ViewBag.Title = "Register for the Quiz Application";
}
<div class="category-wrapper">
    <h2>Associate your @ViewBag.LoginProvider account.</h2>
    @using (Html.BeginForm("GoogleCreateUserName", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <p class="text-info">
                You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
                Please enter a user name and hit the Register button to log in.
            </p>
            <div class="form-group required">
                @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, String.Empty, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Register" />
                </div>
            </div>
        </fieldset>
    }
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
